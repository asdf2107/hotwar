{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb-base",
        "p5js",
        "p5js/dom",
        "p5js/sound"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-use-before-define": "off",
        "one-var": "off",
        "one-var-declaration-per-line": "off",
        "no-plusplus": "off",
        "arrow-parens": "off",
        "no-shadow": "warn",
        "max-classes-per-file": "off",
        "linebreak-style": "off",
        "max-len": "off",
        "no-bitwise": "off",
        "no-param-reassign": "warn",
        "no-lonely-if": "warn",
        "prefer-destructuring": "off"
    }
}